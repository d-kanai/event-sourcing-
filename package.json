{
  "name": "event-sourcing-app",
  "version": "1.0.0",
  "description": "Event Sourcing with TypeScript, Hono, Prisma, and EventStoreDB",
  "main": "dist/index.js",
  "scripts": {
    "dev:user": "tsx watch modules/user/index.ts",
    "dev:account": "tsx watch modules/account/index.ts",
    "dev:listener": "tsx watch modules/account/event-listener.ts",
    "build": "tsc",
    "start:user": "node dist/modules/user/index.js",
    "start:account": "node dist/modules/account/index.js",
    "start:listener": "node dist/modules/account/event-listener.js",
    "test": "firebase emulators:exec --only firestore 'jest'",
    "test:watch": "firebase emulators:exec --only firestore 'jest --watch'",
    "firestore:start": "firebase emulators:start --only firestore",
    "prisma:generate": "prisma generate --schema=modules/account/infrastructure/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=modules/account/infrastructure/prisma/schema.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "event-sourcing",
    "cqrs",
    "ddd",
    "typescript",
    "hono",
    "prisma",
    "eventstoredb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eventstore/db-client": "^6.1.0",
    "@google-cloud/firestore": "^7.11.6",
    "@hono/zod-validator": "^0.2.2",
    "@prisma/client": "^5.9.1",
    "hono": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "firebase-tools": "^14.19.1",
    "jest": "^29.7.0",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
