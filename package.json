{
  "name": "event-sourcing-app",
  "version": "1.0.0",
  "description": "Event Sourcing with TypeScript, Hono, Prisma, and EventStoreDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch backend/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate --schema=backend/modules/account/infrastructure/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=backend/modules/account/infrastructure/prisma/schema.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "event-sourcing",
    "cqrs",
    "ddd",
    "typescript",
    "hono",
    "prisma",
    "eventstoredb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eventstore/db-client": "^6.1.0",
    "@hono/zod-validator": "^0.2.2",
    "@prisma/client": "^5.9.1",
    "hono": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
