generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  balance   Decimal  @db.Decimal(19, 4)
  status    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("accounts")
}
