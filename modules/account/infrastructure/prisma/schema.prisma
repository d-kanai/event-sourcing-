generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id        String   @id
  userId    String   @map("user_id")
  balance   Float
  status    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("accounts")
}

model User {
  id        String   @id
  email     String   @unique
  name      String
  status    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}
